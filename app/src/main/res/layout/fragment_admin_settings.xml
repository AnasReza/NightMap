<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView android:id="@+id/change_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/roboto_regular"
        android:drawableLeft="@drawable/ic_email"
        android:drawableRight="@drawable/ic_path"
        android:drawablePadding="20dp"
        android:text="Change Email"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <TextView android:id="@+id/change_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/roboto_regular"
        android:drawableLeft="@drawable/ic_lock"
        android:drawableRight="@drawable/ic_path"
        android:drawablePadding="20dp"
        android:text="Change Password"
        android:textColor="@android:color/white"
        android:textSize="18dp" />



    <TextView android:id="@+id/privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/roboto_regular"
        android:drawableLeft="@drawable/ic_privacy_policy"
        android:drawablePadding="20dp"
        android:text="Privacy Policy"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <TextView android:id="@+id/terms_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/roboto_regular"
        android:drawableLeft="@drawable/ic_terms_and_conditions"
        android:drawablePadding="20dp"
        android:text="Terms &amp; Condition"
        android:textColor="@android:color/white"
        android:textSize="18dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/roboto_regular"
        android:drawableLeft="@drawable/ic_logout"
        android:drawablePadding="20dp"
        android:text="Log out"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

</LinearLayout>