<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_item"
    android:padding="15dp">


    <FrameLayout android:id="@+id/imageFrame"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:background="@drawable/background_circle2"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="39dp"
            android:layout_height="38dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageFrame"
        android:fontFamily="sans-serif"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="16dp"></TextView>

    <RelativeLayout
        android:id="@+id/cutLayout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_circle">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_cut" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tickLayout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/cutLayout"
        android:background="@drawable/background_circle">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_tick" />
    </RelativeLayout>

</RelativeLayout>
