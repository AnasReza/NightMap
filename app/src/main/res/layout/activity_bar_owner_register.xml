<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/logo" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/background_add_photo">

                <ImageView android:id="@+id/bar_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/add_photo" />

                <ImageView android:id="@+id/upload_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <EditText android:id="@+id/full_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="15dp"
                android:hint="Full Name"
                android:textColor="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColorHint="@android:color/white" />

            <EditText android:id="@+id/phone_number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_phone_call"
                android:drawablePadding="15dp"
                android:hint="Phone Number"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColorHint="@android:color/white" />

            <EditText android:id="@+id/bar_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_only_wine_glass_grey"
                android:drawablePadding="15dp"
                android:hint="Bar Name"
                android:textColor="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColorHint="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp">

                <EditText android:id="@+id/discount_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="Enter Discount (in %)"
                    android:textSize="12dp"
                    android:textColorHint="@android:color/white"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white"
                    android:drawablePadding="15dp"
                    android:layout_weight="1" />

                <EditText android:id="@+id/free_drink_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="Free Drink At"
                    android:textColorHint="@android:color/white"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/white"
                    android:drawablePadding="15dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <EditText android:id="@+id/bar_location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:drawableLeft="@drawable/ic_location_pin"
                android:drawablePadding="15dp"
                android:hint="Bar Location"
                android:textColor="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColorHint="@android:color/white" />

            <EditText android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="15dp"
                android:hint="Description"
                android:gravity="top"
                android:textColor="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:textColorHint="@android:color/white"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textColor="@android:color/white"
                android:gravity="center"
                />

            <Button android:id="@+id/user_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER NOW"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:drawableRight="@drawable/ic_right_arrow"
                android:background="@drawable/button_background"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>